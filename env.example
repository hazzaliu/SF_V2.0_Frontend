# SurveyForge Frontend Environment Configuration
# Copy this file to .env.local and update the values as needed

# Backend API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# Development Mode Settings
# Set to 'false' to use real backend API (with mock fallback)
# Set to 'true' to use only mock data
NEXT_PUBLIC_DEV_MODE=false

# Optional: Enable detailed API logging
NEXT_PUBLIC_ENABLE_API_LOGS=true

# Optional: Custom API timeout (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=10000

# Optional: Custom retry attempts for failed API calls
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3 